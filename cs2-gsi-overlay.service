[Unit]
Description=CS2/CS:GO GSI overlay server for OBS (K/D and chickens counter)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=desper
WorkingDirectory=/home/desper/cs2_tab
ExecStart=/usr/bin/python3 /home/desper/cs2_tab/gsi_server.py
Restart=always
RestartSec=3
# Порт по умолчанию 3002; другой порт: Environment=CS2_GSI_PORT=3003
Environment=CS2_GSI_PORT=3002

[Install]
WantedBy=multi-user.target
